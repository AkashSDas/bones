{
    "imports": {
        "@hono/hono": "jsr:@hono/hono@^4.6.9",

        "#src/": "./src/",
        "#utils/": "./src/utils/",
        "#ws/": "./src/websocket/",

        "@std/fs": "jsr:@std/fs@^1.0.5",
        "@std/path": "jsr:@std/path@^1.0.8",
        "@std/text": "jsr:@std/text@^1.0.8",
        "zod": "npm:zod@^3.23.8"
    },
    "tasks": {
        "start": "deno run --watch=./src --allow-net --allow-read --allow-write ./src/index.ts",
        "fmt": "deno fmt ./src --indent-width 4",

        "docker:build": "docker build -t bridge:latest -f Dockerfile .",
        "docker:run": "docker run --rm -it -p 4000:4000 bridge:latest",

        "try:fs": "deno run --allow-read --allow-write ./src/utils/fs.ts"
    },
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "hono/jsx"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 88
    }
}
