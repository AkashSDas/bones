{
    "name": "backend",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "node -v && tsc -v && tsx watch src/index.ts",
        "vers": "tsc -v",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:strict": "eslint . --max-warnings=0",
        "prettier": "prettier --write src/**/*.{js,json,ts,tsx,css,md}",
        "prepare": "cd .. && husky ./backend/.husky",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:cov": "vitest --coverage",
        "test:ui": "vitest --ui",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
        "db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@bull-board/api": "^6.0.0",
        "@bull-board/hono": "^6.0.0",
        "@dotenvx/dotenvx": "^1.14.1",
        "@hono/node-server": "^1.13.1",
        "@hono/swagger-ui": "^0.4.1",
        "@hono/zod-openapi": "^0.16.2",
        "argon2": "^0.41.1",
        "bull": "^4.16.3",
        "drizzle-orm": "^0.33.0",
        "hono": "^4.6.2",
        "nodemailer": "^6.9.15",
        "pino": "^9.4.0",
        "pino-pretty": "^11.2.2",
        "postgres": "^3.4.4",
        "rotating-file-stream": "^3.2.5",
        "ulid": "^2.3.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.11.17",
        "@types/nodemailer": "^6.4.16",
        "@vitest/coverage-v8": "^2.1.1",
        "@vitest/ui": "^2.1.1",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.24.2",
        "eslint": "^9.11.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "msw": "^2.4.9",
        "prettier": "^3.3.3",
        "tsx": "^4.7.1",
        "typescript": "5.5.3",
        "typescript-eslint": "^8.6.0",
        "vitest": "^2.1.1"
    },
    "lint-staged": {
        "*/**/*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix",
            "eslint"
        ],
        "*/**/*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
