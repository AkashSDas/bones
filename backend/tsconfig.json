{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },

        "target": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "./dist",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
